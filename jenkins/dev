pipeline {
  agent none
  stages {
    stage ('Get Code') {
      agent{
        node {
          label 'master'
        }
      }
      steps {
        git 'https://github.com/Holmes89/hex-example.git'
      }
    }
    stage ('Test') {
      agent{
        docker { image 'golang:1.11.0-stretch'}
      }
      steps {
        sh 'go get ./...'
        sh 'go test ./...'
      }
    }
  }
}
